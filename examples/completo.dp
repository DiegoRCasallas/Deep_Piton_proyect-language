print(m1 + m2)

# Multiplicación Elemento a Elemento
print("Mult Elemento (m1 * m2):")
print(m1 * m2)

# Multiplicación Matricial
print("Matmul (m1 @ m2):")
print(m1 @ m2)

# Transpuesta
print("Transpuesta de m1:")
print(TRP(m1))

# Inversa
