print("=== 1. Aritmética Básica y Variables ===")
a = 10
b = 3
suma = a + b
resta = a - b
mult = a * b
div = a / b
mod = a % b
pot = a ** b

print("a:", a, "b:", b)
print("Suma:", suma)
print("Resta:", resta)
print("Multiplicación:", mult)
print("División:", div)
print("Módulo:", mod)
print("Potencia (10^3):", pot)

print("\n=== 2. Control de Flujo ===")
# Condicionales
if a > b:
    print("a es mayor que b")
elif a == b:
    print("a es igual a b")
else:
    print("a es menor que b")

# Ciclo While
print("Contando hasta 3 con while:")
i = 0
while i < 3:
    print(i)
    i = i + 1

# Ciclo For (simulado con range)
print("Ciclo for con range(3):")
for x in range(3):
    print(x)

print("\n=== 3. Funciones ===")
def factorial(n):
    if n <= 1:
        return 1
    return n * factorial(n - 1)

print("Factorial de 5:", factorial(5))

print("\n=== 4. Operaciones Matriciales ===")
